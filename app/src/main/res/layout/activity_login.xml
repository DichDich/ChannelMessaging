        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            xmlns:gradient="http://schemas.android.com/apk/res-auto"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:src="@drawable/channel_messaging_logo"
                android:layout_margin="20dp"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/editTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:text="dcola"
                    android:layout_marginBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_mdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:theme="@style/TextLabel"
                android:touchscreenBlocksFocus="false">

                <EditText
                    android:id="@+id/editTextMdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:text="dichancolas"
                    android:layout_marginBottom="20dp"/>

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <com.wang.avi.AVLoadingIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/avi"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:indicatorName="BallPulseSyncIndicator"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valider"
                    android:id="@+id/btnValider"
                    android:background="@color/buttonColor"
                    android:textColor="@color/white"/>



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connexionInfo"
                android:id="@+id/textViewInfoConnexion"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/white"
                android:gravity="center_horizontal" />

        </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>
