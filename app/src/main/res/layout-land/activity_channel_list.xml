        android:layout_weight="3"
        android:name="colas.dichan.ChannelMessaging.fragment.MessageFragment"
        android:id="@+id/fragmentB_ID"
        android:layout_gravity="center_vertical"
        tools:layout="@layout/activity_channel" />
